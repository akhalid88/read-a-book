<h1>Books</h1>

<h2>Books to read!</h2>

<ul>
	{{#each books}}
	{{#unless devoured}}
	{{> books/book-block devour=true}}
	{{/unless}}
	{{/each}}
</ul>

<h2>Books that have been read!</h2>

<ul>
	{{#each books}}
		{{#if devoured}}
			{{> books/book-block devour=false}}
		{{/if}}
	{{/each}}
</ul>

<h2>Add a Book</h2>
<form class="create-form">
	{{!-- create form content herre --}}
	<div class="form-group">
		<label for="bo">Book Name:</label>
		<input type="text" id="bo" name="name">
	</div>

	<div class="form-group">
		<label for="devoured">Devoured?</label><br>
		<input type="radio" name="devoured" value="1" checked> Devoured!<br>
		<input type="radio" name="devoured" value="0"> Unread
	</div>

	<button type="submit">Add Book</button>
</form>